<div class="center">
    <img src="img/register_logo.png" class="pb-2"/>
    <h1>REGISTER</h1>
    <form name="reg-form">
        <div class="text-field">
            <input type="text" id="reg-name" onclick="resetInputBorder('reg-name')" required>
            <span></span>
            <label>Name</label>
        </div>
        <div class="text-field">
            <input type="text" id="reg-display-name" onclick="resetInputBorder('reg-display-name')" required>
            <span></span>
            <label>Display Name</label>
        </div>
        <div class="text-field">
            <input type="password" id="reg-password" onclick="resetInputBorder('reg-password')" required>
            <span></span>
            <label>Password</label>
        </div>
        <%- include('partials/registerBtn.ejs') %>
    </form>
</div>

<script>
    function redirectToWorkspace() {
        window.location.assign('http://localhost:5000/app');
    }

    function checkEmptyInputs(userObj) {
        let emptyInput = false
        for(let invalidFields of userObj) {
            if(invalidFields.value === '' && invalidFields.id !== 'register-button') {
                invalidFields.style["border-bottom"] = "1px solid pink";
                emptyInput = true;
            }
        }
        return emptyInput;
    }

    function resetInputBorder(id) {
        let field = document.forms["reg-form"][id];
        field.style["border-bottom"] = "1px solid #C4C4C4";
    }

    function validateRegForm() {
        let user = document.forms["reg-form"];

        let emptyFieldExists = checkEmptyInputs(user);

        if(!emptyFieldExists) {
            redirectToWorkspace();
        }
    }
</script>