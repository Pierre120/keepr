
<div class="container-lg my-3">
  <div class="row justify-content-center">
    <!-- Inventory/Item list Column-->
    <div class="col-9">

      <!-- `Add Item` button-->
      <% if(isOwner) { %>
      <button type="button" class="add-btn"
              data-bs-toggle="modal" data-bs-target="#addModal" data-bs-add-type="item">
      <% } else { %>
      <button type="button" class="add-btn"
              data-bs-toggle="modal" data-bs-target="#addModal" data-bs-add-type="item" disabled>
      <% } %>
        <svg xmlns="http://www.w3.org/2000/svg" width="3rem" height="3rem" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
        </svg>
        <span>Add Item</span>
      </button>

      <!-- Item list -->
      <%# TODO: Pass the `inventoryItems` array from the server %>
      <div class="d-grid gap-3 fade-in-up">
        <% for(let item of inventoryItems) {                                       %>
          <% if (item != null) { %>
        <a class="item-list-card border-pink" href="/<%= workspace._id %>/<%= item.pcode %>">
          <div class="card-body">
            <h4 class="item-name"><%- item.itemName %></h4>
            <hr class="text-pink">
            <p class="item-desc">
              <%- item.description %>
            </p>
            <p class="item-qty">
              <strong>Qty:</strong> <%- item.qtyUnit %>
            </p>
          </div>
        </a>
        <% }}                                                                         %>
      </div>

    </div>

    <!-- `Sort by` button Column-->
    <div class="col-2">
      <%- include('./partials/btn-sort.ejs', {sortModalId: 'sortItemModal'}); %>
    </div>
  </div>
</div>

<!-- Back-to-top button -->
<%- include('./partials/btn-back-to-top.ejs') %>
