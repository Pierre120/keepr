<script>
  // Clear form when closed or confirmed
  function clearForm() {
    // Get all validated forms
    let forms = document.getElementsByClassName('was-validated');

    let toClear = document.getElementsByClassName("form-control");
    for(let i = 0; i < toClear.length; i++){
      toClear[i].value = "";
    }

    // Loop over the array of forms and remove validation styling
    for(let form of forms) {
      form.classList.remove('was-validated');
    }
  };

  // Reset back to the default selected option for cancelled sort operation
  function resetSelection() {
    // Get all validated forms
    let forms = document.getElementsByClassName('was-validated');

    let sortOptions = document.getElementsByClassName("sort-selection");
    for(let option of sortOptions) {
      option.selectedIndex = 0;
    }

    // Loop over the array of forms and remove validation styling
    for(let form of forms) {
      form.classList.remove('was-validated');
    }
  }

  // Client-side validation
  (function () {
    'use strict'

    // Fetch all the forms
    var forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission for empty required inputs
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })();
</script>