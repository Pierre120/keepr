        <a class="nav-link text-white workspace-nav" role="button" 
            data-bs-toggle="modal" data-bs-target="#deleteWorkspaceModal">Delete Workspace</a>
      </li>
      <li class="nav-item mb-4 mt-auto">
        <a id="back-workspace" class="nav-link text-center workspace-nav border border-1 border-lightpurple" 
            role="button" href="/app">Back to Workspaces</a>
