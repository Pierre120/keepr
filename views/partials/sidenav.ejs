<% let activeButton = ['', '', '', '']; %>
<% activeButton[active] = 'active';     %>

<nav id="sidenav" role="navigation"
      class="navbar navbar-expand-lg d-flex align-items-stretch mx-0 p-0">
  
  <div class="row mx-0">
    <div id="workspace-name">
      <p><%- workspace.name %></p>
    </div>

    <%# TODO: %>
    <ul class="nav nav-pills flex-column px-0 w-100 bg-lightpurple" id="nav-section">
      <li class="nav-item">
        <a class="nav-link text-white workspace-nav <%= activeButton[0] %>"
            role="button" href="/<%= workspace._id %>/dashboard">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white workspace-nav <%= activeButton[1] %>" 
            role="button" href="/<%= workspace._id %>/inventory">Inventory</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white text-start workspace-nav <%= activeButton[2] %>" 
            role="button" href="/<%= workspace._id %>/collaborators">Collaborators</a>
      </li>
