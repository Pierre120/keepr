<div class="row fade-in-up">
  <div class="col-2 align-items-start">
    <%- include('partials/backBtn.ejs') %>
  </div>
  <div class = "col-8 align-items-center">
    <h1 class="mt-3 border-bottom border-3 oswald text-gray display-4">PERSONAL ACCOUNT</h1>
    <div class="container-profile-pic m-3">
      <div class="frame picture" id="profilePic" style="background-image: url('https://source.unsplash.com/random/150x150')">
        <input class="uploadProfilePic invisible" type="file" name="profile_pic" id="newProfilePhoto" accept="image/*" />
        <label for="updatedProfilePic" class="uploadPic">
          <div class="text-center m-3 montserrat fw-light">
            <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
              <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z"/>
              <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
            </svg><br>
            Change<br>Profile Picture
          </div>
        </label>
      </div>
    </div>
    <div class="d-grid gap-4">
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Username
            <%- include('partials/editAcctBtn.ejs') %>
          </h2>
          
          <p class="card-text card-text-first ">
            <%- username %>
          </p>
        </div>
      </div>
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Display Name
            <%- include('partials/editAcctBtn.ejs') %>
          </h2>
          <p class="card-text card-text-first ">
            <%- displayName %>
          </p>
        </div>
      </div>
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Password
            <%- include('partials/editAcctBtn.ejs') %>
          </h2>
          <p class="card-text card-text-first ">
            ●●●●●●●●
          </p>
        </div>
      </div>
      <%- include('partials/deleteAcctBtn.ejs') %>
    </div>
  </div>
  <div class="col-2">
  </div>
</div>
