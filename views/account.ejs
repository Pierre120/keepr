<div class="row fade-in-up">
  <div class="col-2 align-items-start">
    <%- include('partials/btn-back.ejs', {type: 'account'}) %>
  </div>
  <div class = "col-8 align-items-center">
    <% if(isOwner) { %>
      <h1 class="mt-3 border-bottom border-3 oswald display-4" id="page-heading">PERSONAL ACCOUNT</h1>
    <% } else { %>
      <h1 class="mt-3 border-bottom border-3 oswald display-4" id="page-heading">VIEW ACCOUNT</h1>
    <% } %>
    <div class="container-profile-pic m-3">
      <div class="frame picture" id="profilePic" style="background-image: url('https://source.unsplash.com/random/150x150')">
      </div>
    </div>
    <div class="d-grid gap-4">
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Username
            <% if(isOwner) { %>
              <%- include('partials/btn-edit-acct.ejs', {
                  editOwner: user.username,
                  editType: 'username'
                }) 
              %>
            <% } %>
          </h2>
          
          <p class="card-text card-text-first ">
            <%- user.username %>
          </p>
        </div>
      </div>
      
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Display Name
            <% if(isOwner) { %>
              <%- include('partials/btn-edit-acct.ejs', {
                  editOwner: user.username,
                  editType: 'displayName'
                }) 
              %>
            <% } %>
          </h2>
          <p class="card-text card-text-first ">
            <%- user.displayName %>
          </p>
        </div>
      </div>
      
      <% if(isOwner) { %>
      <div class="card keepr-card card-account">
        <div class="card-body">
          <h2 class="oswald fw-bolder">
            Password
              <%- include('partials/btn-edit-acct.ejs', {
                    editOwner: user.username,
                    editType: 'password'
                  }) 
              %>
          </h2>
          <p class="card-text card-text-first ">
            ●●●●●●●●
          </p>
        </div>
      </div>
      <% } %>

      <% if(isOwner) { %>
        <%- include('partials/btn-delete-acct.ejs') %>
      <% } %>
    </div>
  </div>
  <div class="col-2">
  </div>
</div>
